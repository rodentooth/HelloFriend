<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/personpreviewbg"
        android:background="#da000000">

    </RelativeLayout>

    <com.frozensparks.hellofriend.Tools.SwipeBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeBackLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/clicktodismiss_prevbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">

            <ImageButton
                android:id="@+id/flag_newhot"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:elevation="16dp"
                android:scaleType="fitXY"
                android:tint="#ffffff"
                app:srcCompat="@drawable/ic_img_413275" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_above="@+id/addonSnap_personpreview"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#000000"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/gender_symbol_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:tint="#ffffff"
                    app:srcCompat="@drawable/ic_man" />

                <ImageView
                    android:id="@+id/diamondcoin_personpreview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_toEndOf="@+id/desc_preview"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_diamond_coin" />


                <TextView
                    android:id="@+id/desc_diamond_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/diamondcoin_personpreview"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/desc_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/gender_symbol_preview"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/addonSnap_personpreview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add_black"
                android:text="Button"
                android:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/addedonsnap_personpreview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/colorAccent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_check"
                android:text="Button"
                android:tint="@android:color/white" />


            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/like_btn_preson_preview"

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBaseline="@+id/scrollview_preview"
                android:layout_alignBottom="@+id/scrollview_preview"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="false"
                android:layout_marginRight="20dp"

                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:background="#00000000"
                android:elevation="30dp"



                app:big_shine_color="#FF6666"
                app:allow_random_color="false"
                app:enable_flashing="true"
                app:click_animation_duration="00"


                />

            <ImageButton
                android:id="@+id/like_btn_preson_preview_tobegone"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBaseline="@+id/scrollview_preview"
                android:layout_alignBottom="@+id/scrollview_preview"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="false"

                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/colorHeartRed"
                android:elevation="29dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_core_heart"
                android:tint="#ffffff" />

            <ImageButton
                android:id="@+id/liked_btn_preson_preview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBaseline="@+id/scrollview_preview"
                android:layout_alignBottom="@+id/scrollview_preview"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="false"

                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/colorHeartRed"
                android:elevation="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_valentines_heart"
                android:tint="#ffffff" />

            <HorizontalScrollView
                android:id="@+id/scrollview_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/addonSnap_personpreview"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView_personpreview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_person_black" />

                    <ImageView
                        android:id="@+id/imageView_personpreview_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_person_black" />

                    <ImageView
                        android:id="@+id/imageView_personpreview_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_person_black" />

                    <ImageView
                        android:id="@+id/imageView_personpreview_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_person_black" />
                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </com.frozensparks.hellofriend.Tools.SwipeBackLayout>
</RelativeLayout>

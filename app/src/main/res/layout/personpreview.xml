<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#da000000">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_above="@+id/addonSnap_personpreview"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#000000"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/gender_symbol_preview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:tint="#ffffff"
                app:srcCompat="@drawable/ic_man" />

            <TextView
                android:id="@+id/desc_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/gender_symbol_preview"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/addonSnap_personpreview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add_snap"
            android:text="Button"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/addedonsnap_personpreview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/colorAccent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_check"
            android:text="Button"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/like_btn_preson_preview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBaseline="@+id/scrollview_preview"
            android:layout_alignBottom="@+id/scrollview_preview"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"

            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/colorHeartRed"
            android:elevation="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_core_heart"
            android:tint="#ffffff" />

        <ImageButton
            android:id="@+id/liked_btn_preson_preview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBaseline="@+id/scrollview_preview"
            android:layout_alignBottom="@+id/scrollview_preview"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="false"

            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/colorHeartRed"
            android:elevation="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_valentines_heart"
            android:tint="#ffffff" />

        <HorizontalScrollView
            android:id="@+id/scrollview_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/addonSnap_personpreview"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_personpreview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_person_black" />

                <ImageView
                    android:id="@+id/imageView_personpreview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_person_black" />

                <ImageView
                    android:id="@+id/imageView_personpreview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_person_black" />

                <ImageView
                    android:id="@+id/imageView_personpreview_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_person_black" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>
</RelativeLayout>